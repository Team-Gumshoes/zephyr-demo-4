{
  "name": "platform",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "platform",
    "targets": {
      "serve": {
        "options": {
          "port": 4200
        },
        "dependsOn": [
          "typecheck"
        ]
      },
      "build": {
        "dependsOn": [
          "^build",
          "typecheck"
        ]
      }
    }
  },
  "devDependencies": {
    "hotels": "workspace:*",
    "transport": "workspace:*",
    "landing": "workspace:*"
  },
  "zephyr:dependencies": {
    "hotels": "hotels@*",
    "transport": "transport@*",
    "landing": "landing@*"
  }
}
